{
  "name": "lissa",
  "version": "0.1.0",
  "description": "программа учета произведенного товара и зарплаты сотрудников",
  "scripts": {
    "start": "babel-node server/index.js",
    "server": "NODE_ENV=development nodemon",
    "client": "cd client && npm start",
    "fix": "eslint --fix .",
    "test:client": "react-app-rewired test --env=jsdom",
    "pre-test": "NODE_ENV=test babel-node ./server/tests/env/seed",
    "after-test": "babel-node ./server/tests/env/removeTestDb",
    "test:server": "NODE_ENV=test jest ./server/tests",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "precommit": "lint-staged",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "shvembldr",
  "license": "ISC",
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.10.0",
    "husky": "0.14.3",
    "jest": "23.2.0",
    "lint-staged": "7.2.0",
    "nodemon": "1.17.5",
    "prettier": "1.13.6",
    "supertest": "3.1.0"
  },
  "dependencies": {
    "apollo-errors": "1.9.0",
    "apollo-link": "1.2.2",
    "apollo-link-context": "1.0.8",
    "apollo-link-error": "1.1.0",
    "apollo-resolvers": "1.3.1",
    "apollo-server-express": "1.3.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-plugin-import": "1.8.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-2": "6.24.1",
    "bcrypt": "2.0.1",
    "body-parser": "1.18.3",
    "concurrently": "3.6.0",
    "cors": "2.8.4",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "graphql": "0.13.2",
    "graphql-tools": "3.0.2",
    "jsonwebtoken": "8.2.2",
    "lodash": "4.17.10",
    "pg": "7.4.3",
    "pg-hstore": "2.3.2",
    "sequelize": "4.37.10",
    "sequelize-cli": "4.0.0",
    "sqlite3": "4.0.1",
    "winston": "2.4.2"
  },
  "engines": {
    "node": "9.9.0",
    "npm": "6.1.0"
  }
}
